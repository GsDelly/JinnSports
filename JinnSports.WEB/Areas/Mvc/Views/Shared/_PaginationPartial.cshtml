@model JinnSports.WEB.Areas.Mvc.Models.PageInfo
@if (Model.EndPage > 1)
{
    <div id="pagination" class="btn-group">
        @if (Model.CurrentPage > 1)
        {
            @Html.ActionLink(
                    "First", Model.ActionName, Model.ControllerName, new { id = 1 }, null)
            @Html.ActionLink(
                    "Previous", Model.ActionName, Model.ControllerName,
                    new { id = Model.CurrentPage - 1 }, null)
        }
        @for (int page = Model.StartPage; page <= Model.EndPage; page++)
        {
            @Html.ActionLink(
                    page.ToString(), Model.ActionName, Model.ControllerName,
                    new { id = page }, null)
        }
        @if (Model.CurrentPage < Model.EndPage)
        {
            @Html.ActionLink(
                    "Next", Model.ActionName, Model.ControllerName,
                    new { id = Model.CurrentPage + 1 }, null)
            @Html.ActionLink(
                    "Last", Model.ActionName, Model.ControllerName,
                    new { id = Model.TotalPages }, null)
        }
    </div>
}
