@using JinnSports.WEB.Areas.Mvc.Models
@using JinnSports.BLL.Dtos
@model TeamViewModel

@{
    ViewBag.Title = "Teams";
    Layout = "~/Areas/Mvc/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Команды</h2>
<table id="teams" class="table table-hover table-striped" style="border-collapse:collapse;">
    <thead style="background: #6495ED; font-size : 16px;">
        <tr>
            <th scope="col">Команда</th>
        </tr>
    </thead>
    <tbody>
        @foreach (TeamDto team in Model.TeamDtos)
        {
            <tr>
                <td>@Html.ActionLink(team.Name, "Details", "Team", new { id = team.Id }, null)</td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("_TeamPaginationPartial", Model)