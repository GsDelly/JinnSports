@using JinnSports.BLL.Dtos
@model JinnSports.WEB.Areas.Mvc.Models.TeamDetailsViewModel

@{
    ViewBag.Title = Model.TeamResultDto.Team.Name;
    Layout = "~/Areas/Mvc/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">@Model.TeamResultDto.Team.Name</h2>
<table id="teamResults" class="table table-hover table-striped" style="border-collapse:collapse;">
    <thead style="background: #6495ED; font-size: 16px;">
        <tr>
            <th scope="col">Домашняя команда</th>
            <th scope="col">Счет</th>
            <th scope="col">Гостевая команда</th>
            <th scope="col">Дата</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ResultDto result in Model.TeamResultDto.Results)
        {
            <tr class="cursor-pointer">
                <td> @Html.DisplayFor(res => result.TeamNames.ToArray()[0]) </td>
                <td> @Html.DisplayFor(res => result.Score) </td>
                <td> @Html.DisplayFor(res => result.TeamNames.ToArray()[1]) </td>
                <td> @Html.DisplayFor(res => result.Date) </td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("_TeamDetailPaginationPartial", Model)