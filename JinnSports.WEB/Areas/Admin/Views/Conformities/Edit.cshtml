@model JinnSports.BLL.Dtos.ConformityViewModel

@{
    ViewBag.Title = string.Format("Сопоставление для {0}", Model.InputName);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Сопоставление для @Model.InputName</h2>

@Html.Label(String.Format("Выберите вариант сопоставления в выпадающем меню или введите в поле ввода свой вариант для {0}", Model.InputName))

@using (Html.BeginForm("Save", "Conformities"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.ExistedName)
        @Html.TextBoxFor(m => m.ExistedName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ExistedName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ExistedName)
        @Html.DropDownListFor(m => m.ConformityId, new SelectList(Model.Conformities, "Id", "ExistedName"), "Выберите имя", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ConformityId)
    </div>
    @Html.HiddenFor(m => m.InputName)
    <button type="submit" class="btn btn-primary">Сохранить</button>
}